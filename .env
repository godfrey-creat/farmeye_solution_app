# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1  # Set to 0 in production

# Database Configuration
DATABASE_URL=sqlite:///app.db  # Replace with your database URL, e.g., postgresql://user:password@localhost/dbname

# Secret Key for Flask Application
SECRET_KEY=farmeye  

# Mail Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@example.com  # Replace with your email address
MAIL_PASSWORD=your_email_password  # Replace with your email app password or token

